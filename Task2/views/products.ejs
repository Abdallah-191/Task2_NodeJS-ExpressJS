<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Management</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
    <style>
        .actions-cell {
            display: flex;
            gap: 10px;
        }
        .actions-cell form, .actions-cell a {
            margin: 0;
        }
        .actions-cell .edit-btn {
            background-color: #f39c12;
            color: white;
            padding: 8px 15px;
            font-size: 14px;
            border-radius: 8px;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }
        .actions-cell .edit-btn:hover {
            background-color: #e67e22;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Product Management</h1>

        <form id="searchForm" action="/products/search" method="get">
            <input type="text" name="name" placeholder="Search by product name..." required>
            <button type="submit">Search</button>
        </form>

        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Code</th>
                    <th>Type</th>
                    <th>Company</th>
                    <th>Expiry Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (products && products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <tr>
                            <td><%= product.name %></td>
                            <td><%= product.code %></td>
                            <td><%= product.type %></td>
                            <td><%= product.company || 'N/A' %></td>
                            <td><%= product.expiryDate ? product.expiryDate.toISOString().split('T')[0] : 'N/A' %></td>
                            <td class="actions-cell">
                                <a href="/products/edit/<%= product._id %>" class="edit-btn">Edit</a>
                                <form action="/products/delete/<%= product._id %>" method="post">
                                    <button type="submit" onclick="return confirm('Are you sure you want to delete this product?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6">No products to display.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
      <a href="/products/add" class="link">Add New Product</a>
      <a href="/logout" class="link" style="float: right;">Logout</a>
    </div>

</body>
</html>
